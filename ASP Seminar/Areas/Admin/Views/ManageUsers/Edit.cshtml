@model ASP_Seminar.Models.UserRoleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label>Roles: </label>
                @for(var i = 0; i < Model.Roles.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.Roles[i].Name" />
                    <input type="checkbox" asp-for="@Model.Roles[i].Selected" class="form-check-input" />
                    <label asp-for="@Model.Roles[i].Selected" class="control-label">@Model.Roles[i].Name</label>
                    <span asp-validation-for="@Model.Roles[i].Name" class="text-danger"></span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
