@model ASP_Seminar.Models.Category

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategories)
        </dt>
        <dd class="col-sm-10">
                @if (Model.ProductCategories != null)
                {
                    @foreach (var item in Model.ProductCategories)
                    {
                        <a asp-action="Details" asp-area="Admin" asp-controller="Products" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.ProductTitle)</a>
                    }

                }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
