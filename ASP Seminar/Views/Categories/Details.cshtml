@model ASP_Seminar.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategories)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProductCategories != null)
            {
                @foreach (var item in Model.ProductCategories)
                {
                    <a asp-action="Details" asp-area="" asp-controller="Products" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.ProductTitle)</a>
                }

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
