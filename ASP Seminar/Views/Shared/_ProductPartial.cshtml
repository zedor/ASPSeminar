@model ASP_Seminar.Models.Product

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var imgSrc = "~/images/no-img.png";
    if (Model.HasImage.HasValue && (bool)Model.HasImage )
            imgSrc = "~/images/" + Model.Id.ToString() + ".png";
}

<div class="card mx-auto col-md-3 col-10 mt-5">
    <img src="@imgSrc" class="mx-auto img-thumbnail" asp-append-version="true" />
    <div class="card-body text-center mx-auto">
        <div class='cvp'>
            <h5 class="card-title font-weight-bold">@Model.Title</h5>
            <p class="card-text">@Html.DisplayFor(model => model.Price)</p>
            <a class="btn btn-outline-info" asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">Details</a>
        </div>
    </div>
</div>